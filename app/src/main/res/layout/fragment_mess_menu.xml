<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.munchies.abhishek.munchies.messMenu">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/day_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Day of the Week"
            android:textColorHint="#05ab9a"
            app:met_floatingLabel="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/meal_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Meal of the Day"
            android:textColorHint="#05ab9a"
            app:met_floatingLabel="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/day_selector"
            android:layout_alignEnd="@+id/day_selector" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menuList"
            android:layout_centerHorizontal="true"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/ratingBar" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_below="@+id/meal_selector"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</FrameLayout>
