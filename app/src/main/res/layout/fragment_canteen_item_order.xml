<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.munchies.abhishek.munchies.canteen_item_order">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_breakfast"
            android:layout_gravity="center"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_centerHorizontal="true"
            card_view:cardElevation="10dp"
            android:layout_marginTop="60dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Item Name"
                    android:textSize="30dp"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Variety"
                    android:textSize="20dp"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Rate"
                    android:textSize="20dp"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="112dp"
                    android:layout_above="@+id/textView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Quantity"
                    android:textSize="20dp"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="7dp"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Variety 1"
                    android:textSize="23dp"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="25"
                    android:id="@+id/textView10"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_toEndOf="@+id/textView9"
                    android:layout_marginStart="22dp" />

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/card_breakfast"
                    android:layout_alignEnd="@+id/card_breakfast"
                    android:layout_marginTop="84dp"
                    android:layout_marginLeft="190dp">


                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/button3" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/button4"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Final Amount:"
                    android:id="@+id/textView11"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginBottom="83dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Rs. XXX"
                    android:id="@+id/textView12"
                    android:layout_alignTop="@+id/textView11"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:id="@+id/button5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="20dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>
