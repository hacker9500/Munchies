        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:id="@+id/card8"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view8"
                android:layout_gravity="center"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:background="@color/cardHead"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cardTextHead"
                        android:textSize="20sp"
                        android:text="Breakfast"
                        android:id="@+id/card8_meal"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cardTextHead"
                        android:textSize="16sp"
                        android:text="MENU"
                        android:layout_gravity="right"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="false"
                        android:background="@color/cardHead"
                        android:layout_marginRight="2dp"
                        android:id="@+id/card8_menu"></Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:minHeight="270dp"

                    >

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Having  "
                        android:id="@+id/card8_vote"
                        android:checked="true"
                        android:layout_above="@+id/card8_rating"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="23dp" />

                    <RatingBar
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:id="@+id/card8_rating"
                        android:clickable="true"
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="12 : 12 : 12"
                        android:id="@+id/card8_timer"
                        android:textColor="@color/cardHead"
                        android:shadowColor="#969494"
                        android:textSize="35sp"
                        android:layout_marginBottom="25dp"
                        android:layout_above="@+id/card8_vote"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>

</ScrollView>
